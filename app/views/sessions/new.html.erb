<h1>Sign In</h1>

<div class="form">
  <%= form_for @user, :url => {:action => 'create'} do |f| %>
    <div class="form-row">
      <div class="form-label"><%= f.label :email %></div>
      <div class="form-field"><%= f.text_field :email %></div>
    </div>
    <div class="form-row">
      <div class="form-label"><%= f.label :password %></div>
      <div class="form-field"><%= f.password_field :password %></div>
    </div>
    <div class="form-submit"><%= f.submit 'Sign In' %></div>
  <% end %>
</div>